	Solver Parameters
 
 -solver  	solver
       		solver = 0  HLLE solver
       		solver = 1  two rarefraction waves
       		solver = 2  flux vector splitting
 		DEFAULT =            2
 -varHLLE  	varHLLE
      		varHLLE = 0 keep junction variables
      		varHLLE = 1 update junction variables according to HLLE scheme
 		DEFAULT =            1 
 -lamtrans 	transonic eigenvalus limits
 		DEFAULT =   1E-4
 -strans  	transition for transonic flows
          	strans = 0 flat
          	strans = 1 linear
          	strans = 2 cubic
 		DEFAULT =            0  
 -entrfix  	yes/no
      		enropy fix
 		DEFAULT = yes
 -varjun  	varjun
      		varjun = 0 vel&celerity average
      		varjun = 1 Roe's scheme
      		varjun = 2 cons. var average
 		DEFAULT =            0

	Second Order Parameters
 
 -ilim 		ilim: second order limiter
       		ilim=-1 no limiter (arithmetic average)
       		ilim=0  zero slopes (first order)
       		ilim=1  MINMOD
       		ilim=2  SUPERBE
       		ilim=3  Mod. MINMOD (see associated limval)
       		ilim=4  SUPERMOD (see associated limCoeff)
 		DEFAULT =            4
 -limval 	transition value for ilim > 2
       		limval=1  inverse average of the inverse slope
       		limval=0.5  suggested for inundation/dam break problems
       		limval=0  as MINMOD
       		limval=-1  similar to SUPERBE
 		DEFAULT =  -0.5
 -limCoeff 	c1 c2 c3 c4
       		coefficient for limvals calculation (if ilim=4, see trans.F)
                NOTE: 
		limvals = limval + c1*faclim + c2*limdx + c3*limdh   ;  limvals=(-0.5,0.5)
     		limdx=(-0.5,0,0.75) for dx=10000,1000,10 
		setdh=(50,33,1)*1e-2*c4*max(dhjv)  for dx=10000,1000,10
         	limdh = exp(log(0.5)*setdh/dhjv) ; for dhjv=setdh -> limdh=0.5 ; for dhjv << setdh -> limdh=0  
		faclim = (0,1) for (deep,shallow)
 		DEFAULT =   0.500000       1.000000       2.000000      0.1
 -limV 		transition value applyed to V
 		DEFAULT = limval
 -limZW 	transition value applyed to ZW
 		DEFAULT = limval
 -noSlope 	no slope map
        	the surface slopes are set to zero
  		DEFAULT = none
 -small 	smallArg: rounded error used in H,Z LIMITER function
  		NOTE: if smallArg is defined(>0)
  		smallH=(smallArg/dx)^2
 		DEFAULT =  -1
 -smallNew 	smallNew: rounded error used in H,Z LIMITER function
 		NOTE: if smallNew is defined(>0) 
  		smallH = (smallNew*dhjv/dx)^2
  		smallV = smallH*sqrt(g/h)
 		DEFAULT =  1
 -limnoise  	yes/no
      		limit the noise generated by 2nd order scheme
 		DEFAULT = no   
 -maxdhmax  	maxdhmax
      		max. accepted value of dhmax=max(dhjv) ; dhjv=max(abs(hL-hR)) 
  		NOTE: see dhmax in monitor.txt
 		DEFAULT =    100
 
 -runUpLim  	runUpLim
		Expected maximum runup
  		Second order is evaluated for deep water (zvmax < -hlim) or zvmin > runUpLim
 		DEFAULT =    50
  
	Small Values Control

 -errprim 	volume primitives (depth, velocity) are NOT updated
           	if the abs increment in the time step is lover than errprim
  		DEFAULT =   1E-5
 -errstep 	the bottom step is handled if the step
          	is higher of errstep
 		DEFAULT =   1E-6
 -facstep 	flow factor for bottom step
          	vLB = vL * (step/hL)^facstep
          	vLF = (hL*vL-step*vLB)/(h-step)
 		DEFAULT =    2
  		NOTE: 	facstep=0 => vLB=VL 
        	facstep>100  => vLB = 0   
 -hmin 		minimum water height [m]
  		NOTE:   for water depth lower of hmin  
          	the water depth on the cells is set to hmin
 		DEFAULT =   1E-6
 -hcrit 	for water depth lower of hcrit 
          	the flux is direct function of the variables {v,c}
 		DEFAULT =   0.1
 -hshore   	critical depth in shoreline tracking
 		DEFAULT =   1e-2     
 -hprim 	for water depth lower of hprim the velocity balance is applied 
  		instead of the momentum balance
 		DEFAULT =   1E-6
 -hlim 		for water depth lower of hlim the slope is applied 
		directly on the velocity and not on the momentum
 		DEFAULT =    100

	BOTTOM FRICTION 
  
 -man 		manning factor map
   		NOTE: can be a scalar value or a map
 -manval 	manval: constant manning factor
 		DEFAULT =   0.01
 -manReef 	reef manning factor
 		DEFAULT =   0
  		NOTE: manReef will be added to manval for demReef < dem 
 -demReef  	min dem in the reef
 		DEFAULT =   -10
 -manslope  	manslope: the manning factor is function of slope
          	manout = manval + manslope*(dzdx^2+dzdy^2)^expslope
 		DEFAULT =   0.01
   		NOTE: can be a scalar value or a map, the manout map is 
		stored in workdir/manout.map
 -expslope  	exponent in manning faction (see manslope)
 		DEFAULT =   0.1
 		NOTE: should be < 0.25   
 -hvel0 	for water depth lower than hvel0 the manning factor is set 
          	to a value (manh) for which steady velocity tend to velmin
          	manh^2 =  dzdx * hvel0^(4/3) / velmin^2 
 		DEFAULT =   1E-4
 -velmin 	steady velocity reached at hvel0
 		DEFAULT =   0.01

