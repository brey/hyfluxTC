 		DEFAULT =    3600
 -stepmax 	max no. of steps
 		DEFAULT =      1000000  
 -courmax 	max courant no.
 		DEFAULT =   0.25     
 -useMinDem 	yes/no
   		yes: force time step calculation as function of minDem
